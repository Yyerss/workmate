{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "watchPatterns": [
            "/src/manage.py",
            "/src/apps/custom_auth/**/*.py",
            "/src/apps/kitten/**/*.py",
            "/src/apps/kittenrating/**/*.py",
            "/src/config/**/*.py",
            "/Dockerfile",
            "/docker-compose.yml",
            "req.txt"
        ]
    },
    "deploy": {
        "restartPolicyType": "ON_FAILURE"
    }
}
